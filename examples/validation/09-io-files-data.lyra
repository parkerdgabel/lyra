(*
  09-io-files-data.lyra â€” File IO and data formats
  Creates a temp file in ./target/tmp (relative to repo) to avoid clutter.
*)

tmpdir := "target/tmp";
_ := Run["mkdir", "-p", tmpdir];

path := tmpdir <> "/hello.txt";
WriteFile[path, "hello lyra"];
ReadFile[path];                         (* => "hello lyra" *)

(* JSON/YAML/TOML parse/stringify *)
JsonStringify[<|a->1, b->2|>];
YamlParse["a: 1\nb: 2\n"];           (* => <|a->1, b->2|> *)
TomlParse["[x]\ny=1\n"];               (* => <|x-><|y->1|>|> *)

