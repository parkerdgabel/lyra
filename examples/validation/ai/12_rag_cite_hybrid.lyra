VectorStore[<|"name"->"mem", "dims"->8|>];
docs := {
  <|"id"->"a1", "text"->"Apples are tasty."|>,
  <|"id"->"b2", "text"->"Bananas are yellow."|>,
  <|"id"->"c3", "text"->"Cherries are red."|>
};
RAGIndex["mem", docs, <||>];

matches := HybridSearch["mem", "red", <|"k"->2|>];
Cite[matches, <|"style"->"markdown"|>];
