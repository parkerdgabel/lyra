{
  "name": "Lyra Dark",
  "type": "dark",
  "colors": {
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d4d4d4",
    "editor.lineHighlightBackground": "#2d2d30",
    "editor.selectionBackground": "#264f78",
    "editor.selectionHighlightBackground": "#add6ff26",
    "editorLineNumber.foreground": "#858585",
    "editorLineNumber.activeForeground": "#c6c6c6",
    "editorCursor.foreground": "#ffffff",
    "editorWhitespace.foreground": "#404040",
    "editorIndentGuide.background": "#404040",
    "editorBracketMatch.background": "#0064001a",
    "editorBracketMatch.border": "#888888"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": [
        "comment",
        "comment.line.double-slash.lyra",
        "comment.block.lyra"
      ],
      "settings": {
        "foreground": "#6A9955",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted.double.lyra",
        "string.quoted.single.lyra"
      ],
      "settings": {
        "foreground": "#CE9178"
      }
    },
    {
      "name": "Numbers",
      "scope": [
        "constant.numeric",
        "constant.numeric.integer.lyra",
        "constant.numeric.float.lyra",
        "constant.numeric.complex.lyra"
      ],
      "settings": {
        "foreground": "#B5CEA8"
      }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control.lyra",
        "keyword.other.lyra"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Operators",
      "scope": [
        "keyword.operator",
        "keyword.operator.assignment.lyra",
        "keyword.operator.comparison.lyra",
        "keyword.operator.logical.lyra",
        "keyword.operator.arithmetic.lyra",
        "keyword.operator.rule.lyra",
        "keyword.operator.pattern.lyra",
        "keyword.operator.function.lyra"
      ],
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    {
      "name": "Mathematical Functions",
      "scope": [
        "entity.name.function.builtin.math.lyra"
      ],
      "settings": {
        "foreground": "#4EC9B0",
        "fontStyle": "bold"
      }
    },
    {
      "name": "List Functions",
      "scope": [
        "entity.name.function.builtin.list.lyra"
      ],
      "settings": {
        "foreground": "#9CDCFE"
      }
    },
    {
      "name": "Pattern Functions",
      "scope": [
        "entity.name.function.builtin.pattern.lyra"
      ],
      "settings": {
        "foreground": "#C586C0"
      }
    },
    {
      "name": "Control Functions",
      "scope": [
        "entity.name.function.builtin.control.lyra"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "User Functions",
      "scope": [
        "entity.name.function.user.lyra",
        "entity.name.function.lyra"
      ],
      "settings": {
        "foreground": "#DCDCAA"
      }
    },
    {
      "name": "Mathematical Constants",
      "scope": [
        "constant.language.mathematical.lyra"
      ],
      "settings": {
        "foreground": "#4FC1FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Greek Letters",
      "scope": [
        "constant.language.greek.lyra"
      ],
      "settings": {
        "foreground": "#4FC1FF",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Boolean Constants",
      "scope": [
        "constant.language.boolean.lyra"
      ],
      "settings": {
        "foreground": "#569CD6"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable.other.lyra"
      ],
      "settings": {
        "foreground": "#9CDCFE"
      }
    },
    {
      "name": "Pattern Variables",
      "scope": [
        "variable.parameter.pattern.lyra"
      ],
      "settings": {
        "foreground": "#FFD700",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Meta Commands",
      "scope": [
        "support.function.meta.lyra",
        "keyword.control.directive.lyra"
      ],
      "settings": {
        "foreground": "#FF6B6B",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "punctuation.definition.brackets",
        "punctuation.definition.brackets.square",
        "punctuation.definition.brackets.curly",
        "punctuation.definition.brackets.round"
      ],
      "settings": {
        "foreground": "#FFD700"
      }
    },
    {
      "name": "Rule Operators",
      "scope": [
        "keyword.operator.rule.lyra"
      ],
      "settings": {
        "foreground": "#FF79C6",
        "fontStyle": "bold"
      }
    }
  ]
}