{
  "name": "Lyra Light",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#000000",
    "editor.lineHighlightBackground": "#f0f0f0",
    "editor.selectionBackground": "#add6ff",
    "editor.selectionHighlightBackground": "#add6ff40",
    "editorLineNumber.foreground": "#237893",
    "editorLineNumber.activeForeground": "#0B216F",
    "editorCursor.foreground": "#000000",
    "editorWhitespace.foreground": "#bfbfbf",
    "editorIndentGuide.background": "#d3d3d3",
    "editorBracketMatch.background": "#00ff0020",
    "editorBracketMatch.border": "#00aa00"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": [
        "comment",
        "comment.line.double-slash.lyra",
        "comment.block.lyra"
      ],
      "settings": {
        "foreground": "#008000",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted.double.lyra",
        "string.quoted.single.lyra"
      ],
      "settings": {
        "foreground": "#A31515"
      }
    },
    {
      "name": "Numbers",
      "scope": [
        "constant.numeric",
        "constant.numeric.integer.lyra",
        "constant.numeric.float.lyra",
        "constant.numeric.complex.lyra"
      ],
      "settings": {
        "foreground": "#098658"
      }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control.lyra",
        "keyword.other.lyra"
      ],
      "settings": {
        "foreground": "#0000FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Operators",
      "scope": [
        "keyword.operator",
        "keyword.operator.assignment.lyra",
        "keyword.operator.comparison.lyra",
        "keyword.operator.logical.lyra",
        "keyword.operator.arithmetic.lyra",
        "keyword.operator.rule.lyra",
        "keyword.operator.pattern.lyra",
        "keyword.operator.function.lyra"
      ],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "name": "Mathematical Functions",
      "scope": [
        "entity.name.function.builtin.math.lyra"
      ],
      "settings": {
        "foreground": "#267F99",
        "fontStyle": "bold"
      }
    },
    {
      "name": "List Functions",
      "scope": [
        "entity.name.function.builtin.list.lyra"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "Pattern Functions",
      "scope": [
        "entity.name.function.builtin.pattern.lyra"
      ],
      "settings": {
        "foreground": "#AF00DB"
      }
    },
    {
      "name": "Control Functions",
      "scope": [
        "entity.name.function.builtin.control.lyra"
      ],
      "settings": {
        "foreground": "#0000FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "User Functions",
      "scope": [
        "entity.name.function.user.lyra",
        "entity.name.function.lyra"
      ],
      "settings": {
        "foreground": "#795E26"
      }
    },
    {
      "name": "Mathematical Constants",
      "scope": [
        "constant.language.mathematical.lyra"
      ],
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Greek Letters",
      "scope": [
        "constant.language.greek.lyra"
      ],
      "settings": {
        "foreground": "#0070C1",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Boolean Constants",
      "scope": [
        "constant.language.boolean.lyra"
      ],
      "settings": {
        "foreground": "#0000FF"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable.other.lyra"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    {
      "name": "Pattern Variables",
      "scope": [
        "variable.parameter.pattern.lyra"
      ],
      "settings": {
        "foreground": "#E05D00",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Meta Commands",
      "scope": [
        "support.function.meta.lyra",
        "keyword.control.directive.lyra"
      ],
      "settings": {
        "foreground": "#E45649",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "punctuation.definition.brackets",
        "punctuation.definition.brackets.square",
        "punctuation.definition.brackets.curly",
        "punctuation.definition.brackets.round"
      ],
      "settings": {
        "foreground": "#0431FA"
      }
    },
    {
      "name": "Rule Operators",
      "scope": [
        "keyword.operator.rule.lyra"
      ],
      "settings": {
        "foreground": "#E45649",
        "fontStyle": "bold"
      }
    }
  ]
}