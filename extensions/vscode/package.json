{
  "name": "lyra-language",
  "displayName": "Lyra Language Support",
  "description": "Language support for Lyra programming language with IntelliSense, syntax highlighting, and REPL integration",
  "version": "0.1.0",
  "publisher": "lyra-lang",
  "icon": "images/lyra-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyra-lang/lyra"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "lyra",
    "mathematical",
    "symbolic",
    "computation",
    "repl"
  ],
  "activationEvents": [
    "onLanguage:lyra",
    "onCommand:lyra.repl.start",
    "onCommand:lyra.export.jupyter",
    "onCommand:lyra.export.latex",
    "onCommand:lyra.export.html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lyra",
        "aliases": [
          "Lyra",
          "lyra"
        ],
        "extensions": [
          ".lyra"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/lyra-file-light.svg",
          "dark": "./images/lyra-file-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "lyra",
        "scopeName": "source.lyra",
        "path": "./syntaxes/lyra.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "lyra.repl.start",
        "title": "Start Lyra REPL",
        "category": "Lyra",
        "icon": "$(terminal)"
      },
      {
        "command": "lyra.repl.stop",
        "title": "Stop Lyra REPL",
        "category": "Lyra",
        "icon": "$(debug-stop)"
      },
      {
        "command": "lyra.repl.restart",
        "title": "Restart Lyra REPL",
        "category": "Lyra",
        "icon": "$(debug-restart)"
      },
      {
        "command": "lyra.repl.evaluateSelection",
        "title": "Evaluate Selection in REPL",
        "category": "Lyra",
        "icon": "$(play)"
      },
      {
        "command": "lyra.repl.evaluateFile",
        "title": "Evaluate File in REPL",
        "category": "Lyra",
        "icon": "$(play-circle)"
      },
      {
        "command": "lyra.export.jupyter",
        "title": "Export to Jupyter Notebook",
        "category": "Lyra",
        "icon": "$(book)"
      },
      {
        "command": "lyra.export.latex",
        "title": "Export to LaTeX",
        "category": "Lyra",
        "icon": "$(file-text)"
      },
      {
        "command": "lyra.export.html",
        "title": "Export to HTML",
        "category": "Lyra",
        "icon": "$(globe)"
      },
      {
        "command": "lyra.docs.openFunction",
        "title": "Open Function Documentation",
        "category": "Lyra",
        "icon": "$(question)"
      },
      {
        "command": "lyra.format.document",
        "title": "Format Lyra Document",
        "category": "Lyra",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == lyra",
          "command": "lyra.repl.evaluateSelection",
          "group": "lyra@1"
        },
        {
          "when": "resourceLangId == lyra",
          "command": "lyra.docs.openFunction",
          "group": "lyra@2"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == lyra",
          "command": "lyra.repl.evaluateFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == lyra",
          "command": "lyra.export.jupyter",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "lyra.repl.evaluateSelection",
          "when": "resourceLangId == lyra"
        },
        {
          "command": "lyra.repl.evaluateFile",
          "when": "resourceLangId == lyra"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lyra.repl.evaluateSelection",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "resourceLangId == lyra && editorTextFocus"
      },
      {
        "command": "lyra.repl.evaluateFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceLangId == lyra && editorTextFocus"
      },
      {
        "command": "lyra.repl.start",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lyra Language Configuration",
      "properties": {
        "lyra.repl.path": {
          "type": "string",
          "default": "lyra",
          "description": "Path to the Lyra executable"
        },
        "lyra.repl.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional arguments to pass to Lyra REPL"
        },
        "lyra.repl.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start REPL when opening Lyra files"
        },
        "lyra.syntax.enableMathSymbols": {
          "type": "boolean",
          "default": true,
          "description": "Enable mathematical symbol rendering in editor"
        },
        "lyra.completion.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense and auto-completion"
        },
        "lyra.completion.includeBultins": {
          "type": "boolean",
          "default": true,
          "description": "Include built-in functions in completion suggestions"
        },
        "lyra.export.defaultFormat": {
          "type": "string",
          "enum": [
            "jupyter",
            "latex",
            "html"
          ],
          "default": "jupyter",
          "description": "Default export format for Lyra sessions"
        },
        "lyra.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time error diagnostics"
        }
      }
    },
    "snippets": [
      {
        "language": "lyra",
        "path": "./snippets/lyra.json"
      }
    ],
    "themes": [
      {
        "label": "Lyra Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/lyra-dark.json"
      },
      {
        "label": "Lyra Light",
        "uiTheme": "vs",
        "path": "./themes/lyra-light.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}